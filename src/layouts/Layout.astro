---
import '../styles/global.css';
import '@fontsource/iosevka-curly-slab'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>Omega Reparaciones - Servicios de Reparación de PC</title>
		<meta name="description" content="Reparación profesional de computadoras, mantenimiento técnico y soporte para PC" />
	</head>
  <body class="min-h-screen flex flex-col">
    <Header/>
		<main class="flex-grow">
			<slot />
		</main>
    <Footer/>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
    height: 100%;
    font-family: 'Iosevka Curly Slab', monospace;
	}
</style>
