---
// Componente de previsualización de servicios
import Colors from './icons/Colors.astro';
import Gear from './icons/Gear.astro';
import Pc from './icons/Pc.astro'
import Save from './icons/Save.astro';
---
<section class="py-12 sm:py-16 bg-primary-foreground">
  <div class="container mx-auto px-4">
    <h2 class="text-2xl sm:text-3xl text-primary font-bold text-center mb-8 sm:mb-12">
      Nuestros Servicios
    </h2>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8">
      <!-- Servicio 1 -->
      <div class="bg-muted rounded-lg shadow-md p-4 sm:p-6 hover:shadow-lg transition-shadow">
        <Pc/>
        <h3 class="text-lg sm:text-xl font-semibold mb-2">Reparación de Hardware</h3>
        <p class="text-secondary-foreground text-sm sm:text-base">Diagnóstico y reparación de componentes, cambio de piezas, actualizaciones.</p>
      </div>
      
      <!-- Servicio 2 -->
      <div class="bg-muted rounded-lg shadow-md p-4 sm:p-6 hover:shadow-lg transition-shadow">
        <Colors/>
        <h3 class="text-lg sm:text-xl font-semibold mb-2">Instalación de Software</h3>
        <p class="text-secondary-foreground text-sm sm:text-base">Instalación de sistemas operativos, programas y configuración personalizada.</p>
      </div>
      
      <!-- Servicio 3 -->
      <div class="bg-muted rounded-lg shadow-md p-4 sm:p-6 hover:shadow-lg transition-shadow">
        <Gear/> 
        <h3 class="text-lg sm:text-xl font-semibold mb-2">Mantenimiento</h3>
        <p class="text-secondary-foreground text-sm sm:text-base">Limpieza interna, optimización de rendimiento y mantenimiento preventivo.</p>
      </div>
      
      <!-- Servicio 4 -->
      <div class="bg-muted rounded-lg shadow-md p-4 sm:p-6 hover:shadow-lg transition-shadow">
        <Save/>
        <h3 class="text-lg sm:text-xl font-semibold mb-2">Recuperación de Datos</h3>
        <p class="text-secondary-foreground text-sm sm:text-base">Recuperación de archivos perdidos, backup y soluciones de almacenamiento.</p>
      </div>
    </div>
    
    <div class="text-center mt-8 sm:mt-12">
      <a href="/servicios" class="bg-primary text-primary-foreground px-6 sm:px-8 py-3 rounded-lg font-semibold hover:bg-accent-hover hover:text-secondary-foreground transition-colors">
        Ver Todos los Servicios
      </a>
    </div>
  </div>
</section>
