---
interface Props {
  containerClass?: string;
  svgClass?: string;
}

const { containerClass = "w-12 h-12 bg-light rounded-lg flex items-center justify-center mb-4", svgClass = "w-6 h-6 text-accent-hover" } = Astro.props;
---
<div class={containerClass}>
  <svg
    class={svgClass}
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
    xmlns="http://www.w3.org/2000/svg"
  >
  <slot/>
  </svg>
</div>
