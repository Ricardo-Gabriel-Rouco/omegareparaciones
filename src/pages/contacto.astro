---
import Layout from '../layouts/Layout.astro';
import {dataNegocio} from '../data/negocio.ts'
---

<Layout>
  <section class="py-16">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold text-center mb-12 ">
        Contacto
      </h1>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
        <!-- Formulario de contacto -->
        <div class="bg-muted rounded-lg shadow-lg p-8">
          <h2 class="text-2xl font-bold mb-6">Envíanos un mensaje</h2>
          <form class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium  mb-2">
                Nombre completo
              </label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                class="w-full px-4 py-2 border text-secondary-foreground border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Tu nombre completo"
              />
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium mb-2 text-primary">
                Correo electrónico
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-2 text-secondary-foreground border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="tu@email.com"
              />
            </div>
            
            <div>
              <label for="phone" class="block text-sm font-medium text-primary mb-2">
                Teléfono
              </label>
              <input 
                type="tel" 
                id="phone" 
                name="phone"
                class="w-full px-4 py-2 text-secondary-foreground border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Tu número de teléfono"
              />
            </div>
            
            <div>
              <label for="service" class="block text-sm font-medium text-primary mb-2">
                Tipo de servicio
              </label>
              <select 
                id="service" 
                name="service"
                class="w-full text-secondary-foreground px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              >
                <option value="">Selecciona un servicio</option>
                <option value="hardware">Reparación de Hardware</option>
                <option value="software">Instalación de Software</option>
                <option value="maintenance">Mantenimiento Preventivo</option>
                <option value="recovery">Recuperación de Datos</option>
                <option value="other">Otro</option>
              </select>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-primary mb-2">
                Descripción del problema
              </label>
              <textarea 
                id="message" 
                name="message" 
                rows="4" 
                required
                class="w-full px-4 py-2 text-secondary-foreground border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Describe detalladamente el problema con tu computadora..."
              ></textarea>
            </div>
            
            <button 
              type="submit"
              class="w-full bg-accent text-secondary px-8 py-3 rounded-lg font-semibold hover:bg-accent-hover hover:text-secondary-foreground transition-colors"
            >
              Enviar Mensaje
            </button>
          </form>
        </div>
        
        <!-- Información de contacto -->
        <div class="space-y-8">
          <div class="bg-muted rounded-lg shadow-lg p-8">
            <h2 class="text-2xl font-bold mb-6">Información de Contacto</h2>
            
            <div class="space-y-4">
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold mb-1">Teléfono</h3>
                  <p class="text-secondary-foreground">{dataNegocio.phone}</p>
                  <p class="text-sm text-secondary-foreground">{dataNegocio.hours}</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold mb-1">Correo electrónico</h3>
                  <p class="text-secondary-foreground">{dataNegocio.mail}</p>
                  <p class="text-sm text-secondary-foreground">Respuesta en 24 horas</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold mb-1">Instagram</h3>
                  <p class="text-secondary-foreground">{dataNegocio.instagram}</p>
                </div>
              </div>
            </div>
          </div>
          
          <div class="bg-muted rounded-lg p-8">
            <h3 class="text-xl font-bold mb-4">Servicio de Emergencia</h3>
            <p class="mb-4 text-secondary-foreground">
              ¿Tu computadora presenta un problema urgente? Ofrecemos servicio de emergencia 
              con atención prioritaria las 24 horas.
            </p>
            <a href={dataNegocio.phone} class="inline-flex items-center bg-accent text-secondary px-8 py-3 rounded-lg font-semibold hover:bg-accent-hover hover:text-secondary-foreground transition-colors">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              Llamar Emergencia
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
