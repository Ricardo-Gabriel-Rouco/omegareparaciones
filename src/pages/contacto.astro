---
import Layout from '../layouts/Layout.astro';
import Phone from '../components/icons/Phone.astro';
import Mail from '../components/icons/Mail.astro';
import Instagram from '../components/icons/Instagram.astro';
import SpecialPhone from '../components/icons/SpecialPhone.astro';
import {dataNegocio} from '../data/negocio.ts'
---

<Layout>
  <section class="py-16">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold text-center mb-12 ">
        Contacto
      </h1>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
        <!-- Formulario de contacto -->
        <div class="bg-muted rounded-lg shadow-lg p-8">
          <h2 class="text-2xl font-bold mb-6">Envíanos un mensaje</h2>
          <form class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium  mb-2">
                Nombre completo
              </label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                class="w-full bg-secondary border border-muted text-primary px-4 py-2 rounded-lg focus:ring-2 focus:ring-accent focus:border-muted"
                placeholder="Tu nombre completo"
              />
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium mb-2 text-primary">
                Correo electrónico
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full bg-secondary border border-muted text-primary px-4 py-2 rounded-lg focus:ring-2 focus:ring-accent focus:border-muted"
                placeholder="tu@email.com"
              />
            </div>
            
            <div>
              <label for="phone" class="block text-sm font-medium text-primary mb-2">
                Teléfono
              </label>
              <input 
                type="tel" 
                id="phone" 
                name="phone"
                class="w-full bg-secondary border border-muted text-primary px-4 py-2 rounded-lg focus:ring-2 focus:ring-accent focus:border-muted"
                placeholder="Tu número de teléfono"
              />
            </div>
            
            <div>
              <label for="service" class="block text-sm font-medium text-primary mb-2">
                Tipo de servicio
              </label>
              <select 
                id="service" 
                name="service"
                class="w-full bg-secondary border border-muted text-primary px-4 py-2 rounded-lg focus:ring-2 focus:ring-accent focus:border-muted"
              >
                <option value="" class="bg-secondary text-primary">Selecciona un servicio</option>
                <option value="hardware" class="bg-secondary text-primary">Reparación de Hardware</option>
                <option value="software" class="bg-secondary text-primary">Instalación de Software</option>
                <option value="maintenance" class="bg-secondary text-primary">Mantenimiento Preventivo</option>
                <option value="recovery" class="bg-secondary text-primary">Recuperación de Datos</option>
                <option value="other" class="bg-secondary text-primary">Otro</option>
              </select>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-primary mb-2">
                Descripción del problema
              </label>
              <textarea 
                id="message" 
                name="message" 
                rows="4" 
                required
                class="w-full bg-secondary border border-muted text-primary px-4 py-2 rounded-lg focus:ring-2 focus:ring-accent focus:border-muted"
                placeholder="Describe detalladamente el problema con tu computadora..."
              ></textarea>
            </div>
            
            <button 
              type="submit"
              class="w-full bg-accent text-secondary px-8 py-3 rounded-lg font-semibold hover:bg-accent-hover hover:text-secondary-foreground transition-colors"
            >
              Enviar Mensaje
            </button>
          </form>
        </div>
        
        <!-- Información de contacto -->
        <div class="space-y-8">
          <div class="bg-muted rounded-lg shadow-lg p-8">
            <h2 class="text-2xl font-bold mb-6">Información de Contacto</h2>
            
            <div class="space-y-4">
              <div class="flex items-start space-x-4">
                <Phone/>
                <div>
                  <h3 class="font-semibold mb-1">Teléfono</h3>
                  <p class="text-secondary-foreground">{dataNegocio.phone}</p>
                  <p class="text-sm text-secondary-foreground">{dataNegocio.hours}</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-4">
                <Mail/>
                <div>
                  <h3 class="font-semibold mb-1">Correo electrónico</h3>
                  <p class="text-secondary-foreground">{dataNegocio.mail}</p>
                  <p class="text-sm text-secondary-foreground">Respuesta en 24 horas</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-4">
                <Instagram/>
                <div>
                  <h3 class="font-semibold mb-1">Instagram</h3>
                  <p class="text-secondary-foreground">{dataNegocio.instagram}</p>
                </div>
              </div>
            </div>
          </div>
          
          <div class="bg-muted rounded-lg p-8">
            <h3 class="text-xl font-bold mb-4">Servicio de Emergencia</h3>
            <p class="mb-4 text-secondary-foreground">
              ¿Tu computadora presenta un problema urgente? Ofrecemos servicio de emergencia 
              con atención prioritaria las 24 horas.
            </p>
            <a href={dataNegocio.phone} class="inline-flex items-center bg-accent text-secondary px-8 py-3 rounded-lg font-semibold hover:bg-accent-hover hover:text-secondary-foreground transition-colors">
              <SpecialPhone/>Llamar Emergencia
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
